                                        <li class="active has-dropdown">
                                            @*<a href="/service">Services</a>*@
                                            <a>@Html.Sitecore().Field("Services", Itemdata)</a>
                                            <ul class="submenu">
                                                <li><a href="/service">Services</a></li>
                                                <li>
                                                    <a href="/service-details">Service Details</a>
                                                </li>
                                            </ul>
                                        </li>
                                        <li class="active has-dropdown">
                                            @*<a href="/blog">Blog</a>*@
                                            <a>@Html.Sitecore().Field("Blog", Itemdata)</a>
                                            <ul class="submenu">
                                                <li><a href="/blog">Blog</a></li>
                                                <li><a href="/blog-details">Blog Details</a></li>
                                            </ul>
                                        </li>
                                        <li class="active has-dropdown">
                                            @*<a href="/team">Pages</a>*@
                                            <a>@Html.Sitecore().Field("Pages", Itemdata)</a>
                                            <ul class="submenu">
                                                <li><a href="/team">Team</a></li>
                                                <li><a href="/team-details">Team Details</a></li>
                                                <li><a href="/case-study">Case Study</a></li>
                                                <li><a href="/case-details">Case Details</a></li>
                                                <li><a href="/pricing">Pricing</a></li>
                                                <li><a href="/faq">FAQ</a></li>
                                                <li><a href="/error">404 Page</a></li>
                                            </ul>
                                        </li>
                                        <li class="undefined">
                                            @*<a href="/contact">Contact</a>*@
                                            <a>@Html.Sitecore().Field("Contact", Itemdata)</a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-2 col-lg-2 col-6">
                        <div class="header__right text-end">
                            <div class="search__button">
                                <span class="search__toggle">
                                    <i class="header-search__btn fa-regular fa-magnifying-glass"></i><i class="header-search__close fa-regular fa-xmark"></i>
                                </span>
                                <div class="bd-search__form p-relative">
                                    <form action="#">
                                        <input type="text"
                                               placeholder="Search here..." /><button type="submit">
                                            <i class="fa-regular fa-magnifying-glass"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>